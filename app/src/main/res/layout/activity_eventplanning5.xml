<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventplanningActivity5" >

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:outlineProvider="bounds">

        <TextView
            android:id="@+id/TitleEventplanning5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="28dp"
            android:text="@string/eventplanning5_title"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/LabelEventName5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:layout_weight="1"
            android:text="@string/eventplanning5_label_eventname" />

        <EditText
            android:id="@+id/InputEventName5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="28dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/eventplanning5_hint_eventname"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/LabelReferent5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:text="@string/eventplanning5_label_creator" />

        <TextView
            android:id="@+id/OutputReferent5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="28dp"
            android:text="@string/eventplanning5_creator" />

        <TextView
            android:id="@+id/LabeDescription5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:text="@string/eventplanning5_label_description" />

        <EditText
            android:id="@+id/InputDescription5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/eventplanning5_hint_description"
            android:inputType="text"
            android:minHeight="48dp" />
        <TextView
            android:id="@+id/LabelDate5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:text="@string/eventplanning5_label_date" />

        <Button
            android:id="@+id/buttonDatePicker5"
            style="?android:spinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:onClick="openDatePicker"
            android:outlineProvider="bounds"
            android:text="@string/eventplanning5_date"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/LabelTime5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:text="@string/eventplanning5_label_time" />

        <Button
            android:id="@+id/buttonTimePicker5"
            style="?android:spinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:onClick="openTimePicker"
            android:outlineProvider="bounds"
            android:text="@string/eventplanning5_time"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/LabelLocation5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:text="@string/eventplanning5_label_location" />

        <EditText
            android:id="@+id/InputLocation5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/eventplanning5_hint_location"
            android:inputType="text"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/LabelMaxParticipants5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:text="@string/eventplanning5_label_max_participants" />

        <EditText
            android:id="@+id/InputMaxParticipants5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:hint="@string/eventplanning5_hint_max_participants"
            android:inputType="number"
            android:minHeight="48dp" />

        <View
            android:id="@+id/divider5_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/ButtonSave5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:backgroundTint="#9C1C4D"
            android:text="@string/eventplanning5_button_save" />

        <TextView
            android:id="@+id/LabelParticipants5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:text="@string/eventplanning5_label_participants" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ListOfParticipants5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</ScrollView>
